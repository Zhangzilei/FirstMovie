<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/zhu_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegisterActivity">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_nicheng"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/bg_shape"
            android:hint="请输入昵称"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_email"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shape"
            android:hint="请输入邮箱"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_shape"
                android:hint="请输入密码"
                android:paddingLeft="20dp"
                android:password="true"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_shan"
                android:src="@mipmap/ic_launcher"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/img_yan"
                android:src="@mipmap/ic_launcher"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_yanzheng"
                android:paddingLeft="20dp"
                android:layout_toLeftOf="@id/btn_yan"
                android:background="@drawable/bg_shape"
                android:hint="请输入验证码"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_yan"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="55dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_login"
        android:text="已有账号?立即登录"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_register"
        android:background="@drawable/shape"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#ff5f71"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</RelativeLayout>