<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".view.activity.ZiliaoActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="25dp">

        <ImageView
            android:id="@+id/xximg"
            android:src="@drawable/back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="个人资料"
            android:layout_centerHorizontal="true"
            android:textColor="#d8d8d8"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_marginTop="@dimen/dp_21"
        android:background="#1c2243"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_178">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36">

            <TextView
                android:layout_centerVertical="true"
                android:text="头         像"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#deffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<ImageView
                android:id="@+id/zlimg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36" />-->

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/zlsimple"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                app:roundAsCircle="true"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36">

            <TextView
                android:layout_centerVertical="true"
                android:text="昵         称"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#deffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zlname"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36">

            <TextView
                android:layout_centerVertical="true"
                android:text="性         别"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#deffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zlsex"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36">

            <TextView
                android:layout_centerVertical="true"
                android:text="出生日期"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#deffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zltime"
                android:textSize="@dimen/sp_12"
                android:text="2000-01-01"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="#1c2243"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_54">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerVertical="true"
                android:text="邮         箱"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#deffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zlyouxiang"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>